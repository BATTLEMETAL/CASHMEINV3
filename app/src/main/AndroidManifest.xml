<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Uprawnienia -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- *** ADDED: Permission for Notifications (Android 13+) *** -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- Nowe uprawnienia do zarządzania mediami w Androidzie 13+ -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        tools:targetApi="33" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_VIDEO"
        tools:targetApi="33" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_AUDIO"
        tools:targetApi="33" />

    <!-- Alternatywne uprawnienia dla starszych wersji Androida -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:targetApi="32" /> <!-- Kept tools:targetApi as it was in your original -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:targetApi="32" /> <!-- Kept tools:targetApi as it was in your original -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CASHMEINV3"
        tools:targetApi="31">

        <!-- Firebase Configuration -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <!-- Facebook SDK Configuration -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />

        <!-- Google Sign-In Configuration -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- AdMob Configuration -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4061304717309536~6472669965" />

        <!-- Aktywności aplikacji -->

        <!-- LoginActivity jako aktywność startowa -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CASHMEINV3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Deklaracja HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.CASHMEINV3">
        </activity>

        <!-- Deklaracja CalendarActivity -->
        <activity
            android:name=".CalendarActivity"
            android:exported="false"
            android:theme="@style/Theme.CASHMEINV3">
        </activity>

        <!-- Deklaracja ExpensesActivity -->
        <activity
            android:name=".ExpensesActivity"
            android:exported="false"
            android:theme="@style/Theme.CASHMEINV3">
        </activity>

        <!-- Deklaracja SettingsActivity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.CASHMEINV3">
        </activity>

        <!-- Facebook Login Activity -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|smallestScreenSize|orientation"
            tools:replace="android:configChanges"
            android:exported="false" />

        <!-- Facebook Custom Tab Activity -->
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>