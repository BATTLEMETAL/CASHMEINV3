<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Istniejące Wymiary (prawdopodobnie z poprzednich etapów projektu) -->

    <!-- Wcięcie dla zaznaczonego dnia w kalendarzu, żeby kółko nie stykało się z krawędzią -->
    <dimen name="calendar_selected_inset">4dp</dimen>
    <!-- Standardowe marginesy poziome i pionowe dla całej aktywności (ekranu) -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <!-- Różne wielkości odstępów, żeby zachować spójność -->
    <dimen name="spacing_small">4dp</dimen>   <!-- Mały odstęp -->
    <dimen name="spacing_medium">8dp</dimen>  <!-- Średni odstęp -->
    <dimen name="spacing_large">16dp</dimen> <!-- Duży odstęp (używany też jako standardowy) -->
    <dimen name="spacing_xlarge">24dp</dimen><!-- Bardzo duży odstęp (używany też jako duży padding) -->
    <dimen name="spacing_xxlarge">32dp</dimen><!-- Jeszcze większy odstęp -->

    <!-- Różne rozmiary tekstu, żeby hierarchia była czytelna -->
    <dimen name="text_size_small">12sp</dimen>   <!-- Mały tekst (np. do jakichś dodatkowych informacji) -->
    <dimen name="text_size_normal">14sp</dimen>  <!-- Normalny rozmiar tekstu -->
    <dimen name="text_size_medium">16sp</dimen>  <!-- Średni rozmiar tekstu -->
    <dimen name="text_size_large">18sp</dimen>  <!-- Duży tekst (używany np. dla etykiet ustawień i tekstu na przyciskach) -->
    <dimen name="text_size_xlarge">22sp</dimen> <!-- Bardzo duży tekst -->
    <dimen name="text_size_title">24sp</dimen>  <!-- Pierwotny rozmiar tytułu (np. na ActionBarze?) -->

    <!-- Wysokości ważnych elementów interaktywnych -->
    <dimen name="button_height">48dp</dimen>    <!-- Wysokość przycisku (używana też jako minimalny cel dotykowy) -->
    <dimen name="edit_text_height">48dp</dimen> <!-- Wysokość pola EditText (też jako minimalny cel dotykowy) -->
    <!-- Rozmiar ikonek -->
    <dimen name="icon_size">24dp</dimen>
    <!-- Wysokość elementu na liście (np. wydatku) -->
    <dimen name="list_item_height">72dp</dimen>

    <!-- Inne wymiary, które się pojawiły (mogą być częściowo duplikatami) -->
    <dimen name="activity_padding">16dp</dimen>      <!-- Padding dla całej aktywności (jak activity_horizontal_margin) -->
    <dimen name="container_padding">24dp</dimen>    <!-- Padding dla jakiegoś kontenera (np. karty ustawień) -->
    <dimen name="small_padding">8dp</dimen>       <!-- Mały padding (jak spacing_medium) -->
    <dimen name="title_text_size">28sp</dimen>     <!-- Rozmiar tekstu tytułu (np. "Ustawienia" na górze ekranu) -->
    <dimen name="normal_text_size">18sp</dimen>    <!-- Normalny tekst (jak text_size_large) -->
    <dimen name="button_text_size">18sp</dimen>    <!-- Tekst na przycisku (jak text_size_large) -->
    <dimen name="small_margin">12dp</dimen>       <!-- Mały margines -->
    <dimen name="medium_margin">24dp</dimen>      <!-- Średni margines (jak spacing_xlarge) -->
    <dimen name="large_margin">24dp</dimen>       <!-- Duży margines (jak spacing_xlarge) -->
    <dimen name="list_item_padding">8dp</dimen>    <!-- Padding wewnątrz elementu listy -->
    <dimen name="delete_button_min_width">48dp</dimen> <!-- Minimalna szerokość przycisku usuwania (dla łatwego kliknięcia) -->

    <!-- Dodane/Mapowane Wymiary dla Ulepszonego Layoutu Ustawień -->
    <!-- Chodzi o to, żeby używać bardziej semantycznych nazw -->

    <!-- Minimalny rozmiar elementu dotykowego (zgodnie z wytycznymi Material Design) -->
    <dimen name="min_touch_target">@dimen/button_height</dimen> <!-- Używa 48dp z button_height -->
    <!-- Duży padding, używany np. w karcie ustawień -->
    <dimen name="padding_large">@dimen/spacing_xlarge</dimen> <!-- Używa 24dp ze spacing_xlarge -->
    <!-- Rozmiar tekstu tytułu w nowym layoucie ustawień używa title_text_size (28sp) -->
    <!-- Rozmiar tekstu dla etykiety ustawienia (np. "Powiadomienia") -->
    <dimen name="text_size_setting_label">@dimen/text_size_large</dimen> <!-- Używa 18sp z text_size_large -->
    <!-- Rozmiar tekstu na przycisku w nowym layoucie ustawień używa text_size_large (18sp) -->

</resources>