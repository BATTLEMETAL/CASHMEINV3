<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07202D"
    android:padding="16dp">

    <!-- Calendar Header (Moved to Top) -->
    <TextView
        android:id="@+id/calendarHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalendarz"
        android:textSize="20sp"
        android:textColor="@color/text_color_primary"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Calendar CardView Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calendarCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/calendarHeader"
        app:layout_constraintBottom_toTopOf="@id/dateAndExpensesLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Actual Calendar View -->
        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:headerColor="@color/backgroundColor"
            app:selectionColor="@color/text_color_secondary"
            app:todayLabelColor="@color/text_color_secondary"
            app:daysLabelsColor="@color/text_color_secondary"
            app:anotherMonthsDaysLabelsColor="@color/text_color_secondary"
            app:disabledDaysLabelsColor="@color/disabled_day_color"
            app:pagesColor="@android:color/transparent"
            app:abbreviationsBarColor="@android:color/transparent"
            app:abbreviationsLabelsColor="@color/text_color_secondary"
            app:type="one_day_picker"
            app:selectionDisabled="false"
            app:selectionLabelColor="@color/white"
            app:firstDayOfWeek="monday"
            />
    </com.google.android.material.card.MaterialCardView>

    <!-- Selected Date and Expenses (Moved Below Calendar) -->
    <LinearLayout
        android:id="@+id/dateAndExpensesLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarCardView"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:layout_marginBottom="16dp">

        <!-- Selected Date -->
        <TextView
            android:id="@+id/selectedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="01/01/1970"
            android:textColor="@color/text_color_secondary"
            android:textSize="18sp" />

        <!-- Expenses Display -->
        <TextView
            android:id="@+id/expensesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Oszczędności: 0.00 PLN"
            android:textColor="@color/text_color_secondary"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_navigation"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>