<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".ExpensesActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/text_color_primary"
        android:fontFamily="@font/roboto_medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_padding"
        android:layout_marginBottom="@dimen/small_margin" />

    <!-- Content Area (Takes up remaining space and allows scrolling) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_marginBottom="@dimen/small_margin">

        <!-- Container for all content items inside the scroll view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_padding"
            android:paddingEnd="@dimen/activity_padding">

            <!-- Budget Section -->
            <LinearLayout
                android:id="@+id/budgetContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background_white"
                android:padding="@dimen/container_padding"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/medium_margin">

                <!-- Contents of Budget Section (TextViews, Buttons) -->
                <TextView
                    android:id="@+id/dailyBudgetTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_budget"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_color_secondary"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginBottom="@dimen/small_margin" />

                <TextView
                    android:id="@+id/monthlyBudgetTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_budget"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_color_secondary"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginBottom="@dimen/small_margin" />

                <TextView
                    android:id="@+id/savingsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/savings"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_color_secondary"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginBottom="@dimen/medium_margin" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewExpensesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button_color"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/show_expenses"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginBottom="@dimen/small_margin"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addProductButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button_color"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/add_product"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>

            <!-- Scanned Items Section Header -->
            <TextView
                android:id="@+id/totalScannedItemsValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scanned_items"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_color_primary"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/small_margin" />

            <!-- List of Scanned Items -->
            <ListView
                android:id="@+id/scannedItemsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background_white"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginBottom="@dimen/medium_margin"/>

            <!-- Add Product Section -->
            <LinearLayout
                android:id="@+id/addProductContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="@drawable/rounded_background_white"
                android:padding="@dimen/container_padding"
                android:layout_marginBottom="@dimen/medium_margin">

                <!-- Contents of Add Product Section (EditTexts, Spinner, Button) -->
                <EditText
                    android:id="@+id/productNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/product_name_hint"
                    android:textColor="@color/text_color_secondary"
                    android:textColorHint="@color/hint_color"
                    android:backgroundTint="@color/edit_text_underline_color"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:inputType="textCapSentences" />

                <EditText
                    android:id="@+id/productPriceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/product_price_hint"
                    android:textColor="@color/text_color_secondary"
                    android:textColorHint="@color/hint_color"
                    android:backgroundTint="@color/edit_text_underline_color"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="@dimen/small_margin" />

                <!-- === UPDATED SPINNER === -->
                <Spinner
                    android:id="@+id/productCategorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_margin"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:backgroundTint="@color/edit_text_underline_color"
                    android:popupBackground="@color/white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
                <!-- android:textColor removed - handled by custom layout -->
                <!-- ======================= -->


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirmAddProductButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button_color"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/confirm_add_product"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- End of LinearLayout inside ScrollView -->

    </androidx.core.widget.NestedScrollView>
    <!-- End of content ScrollView -->

    <!-- Bottom Navigation (Stays at the bottom) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_navigation"
        android:elevation="16dp"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>

</LinearLayout>