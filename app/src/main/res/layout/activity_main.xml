<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#07202D">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Dollar Symbol Icon -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/app_logo"
            android:contentDescription="@string/app_logo" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="24dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailEditText"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_white"
            android:padding="18dp"
            android:layout_marginBottom="16dp"
            android:textColor="#001219"
            android:textColorHint="#777777"
            android:fontFamily="@font/roboto_medium" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordEditText"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_white"
            android:padding="18dp"
            android:layout_marginBottom="16dp"
            android:textColor="#001219"
            android:textColorHint="#777777"
            android:fontFamily="@font/roboto_medium" />

        <!-- Log In Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            android:text="@string/log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#007B7F"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerButton"
            android:text="@string/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Google and Facebook Buttons Container -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Google Sign In Button -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background_white"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/googleIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_google_logo"
                    android:contentDescription="@string/google_logo" />

                <TextView
                    android:id="@+id/googleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/google_sign_in"
                    android:textColor="#001219"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:fontFamily="@font/roboto_medium" />
            </LinearLayout>

            <!-- Facebook Sign In Button -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background_white"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/facebookIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_facebook_logo"
                    android:contentDescription="@string/facebook_logo" />

                <TextView
                    android:id="@+id/facebookText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/facebook_sign_in"
                    android:textColor="#001219"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:fontFamily="@font/roboto_medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Forgot Password Link -->
        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
